#!/bin/sh
# mount muh nfs!

mount=$(\
grep nfs /etc/fstab | \
    head -n 1 | \
    sed -E -e 's/#+//' -e 's/ nfs.*//'
)

if [ "$mount" ] ; then
    case $(uname) in
        OpenBSD)
            d=doas
    esac
    case ${1#-} in
        u)
            ${d:-sudo} umount "${mount##* }"
            ;;
        *)
            ${d:-sudo} mount "$mount"
    esac
fi
